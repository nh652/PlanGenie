
# Server Configuration
PORT=3000
NODE_ENV=development

# External API Configuration
JSON_URL=https://raw.githubusercontent.com/nh652/TelcoPlans/main/telecom_plans_improved.json

# Cache Settings (in milliseconds)
CACHE_DURATION=3600000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_RATE_LIMIT_WINDOW_MS=60000
WEBHOOK_RATE_LIMIT_MAX=30

# Speed Limiting Configuration
SPEED_LIMIT_WINDOW_MS=900000
SPEED_LIMIT_DELAY_AFTER=50
SPEED_LIMIT_DELAY_MS=500
SPEED_LIMIT_MAX_DELAY_MS=20000

# Security Configuration
REQUEST_TIMEOUT_MS=30000
REQUEST_SIZE_LIMIT=1mb

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
EXTERNAL_API_TIMEOUT=10000

# Response Configuration
MAX_PLANS_TO_SHOW=8
