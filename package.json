{
  "name": "mobile-plan-bot-webhook",
  "type": "module",
  "version": "1.0.0",
  "description": "Webhook for Mobile Plan Comparison Chatbot",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:secure": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "docs": "node -e \"console.log('API Documentation available at: http://localhost:3000/docs')\"",
    "docs:validate": "swagger-codegen validate -i docs/api.yaml",
    "lint": "echo 'ESLint not configured. Consider adding ESLint for code quality.'",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "collectCoverageFrom": [
      "utils/**/*.js",
      "services/**/*.js",
      "middleware/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "axios": "^1.9.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0-beta.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.1"
  }
}
